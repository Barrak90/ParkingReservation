<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/map_window"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_15"
        android:layout_marginRight="@dimen/margin_15"
        android:layout_marginLeft="@dimen/margin_15"
        android:paddingRight="@dimen/margin_15"
        android:paddingLeft="@dimen/margin_15"
        android:paddingTop="@dimen/margin_15"
        android:paddingBottom="@dimen/margin_5"
        android:background="@color/blue_sky_transparent"
        android:orientation="vertical">

    <TextView
        android:id="@+id/map_parking_name_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_5"
        android:layout_marginLeft="@dimen/margin_5"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:text="SOMA parking"/>

    <TextView
        android:id="@+id/map_parking_address_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_5"
        android:layout_marginLeft="@dimen/margin_5"
        android:textColor="@android:color/white"
        android:text="1160 Mission St"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/margin_5"
        android:background="@android:color/white"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_5"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/map_parking_spots"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Open Spots \n 2"
            android:gravity="center"
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/map_parking_cost_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Cost \n .25/min"
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/map_parking_distance_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Distance \n .05 miles"
            android:textColor="@android:color/white"/>


    </LinearLayout>


    <Button
        android:id="@+id/map_parking_reserve_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:clickable="true"
        android:paddingTop="@dimen/margin_15"
        android:paddingBottom="@dimen/margin_15"
        android:layout_marginLeft="@dimen/margin_15"
        android:layout_marginRight="@dimen/margin_15"
        android:layout_marginBottom="@dimen/margin_5"
        android:layout_marginTop="@dimen/margin_15"
        android:background="@drawable/reserve_btn_bg_white"
        android:textColor="@color/blue_sky_transparent"
        android:text="Pay to Reserve"/>


    <TextView
        android:id="@+id/parking_more_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="more"
        android:layout_gravity="center"
        android:textColor="@android:color/white"/>



        </LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/map_window"
        android:layout_centerHorizontal="true"
        android:src="@android:drawable/arrow_down_float"/>
</RelativeLayout>