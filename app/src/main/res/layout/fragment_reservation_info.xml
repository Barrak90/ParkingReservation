<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4">

        <ImageView
            android:id="@+id/info_parking_iv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/parking_meter_1"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingRight="@dimen/margin_15"
            android:paddingLeft="@dimen/margin_15"
            android:paddingTop="@dimen/margin_15"
            android:paddingBottom="@dimen/margin_5"
            android:background="@color/black_transparent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/info_parkin_name_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_5"
                android:layout_marginLeft="@dimen/margin_5"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:text="Fremnot General"/>

            <TextView
                android:id="@+id/info_parking_address_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_5"
                android:layout_marginLeft="@dimen/margin_5"
                android:textColor="@android:color/white"
                android:text="41 Santa Monica Way"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/margin_5"
                android:background="@android:color/white"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_5"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/info_isReserved_tv"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="Available"
                    android:gravity="center"
                    android:textColor="@android:color/holo_green_light"/>

                <TextView
                    android:id="@+id/info_parking_cost_tv"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Cost \n .25/min"
                    android:textColor="@android:color/white"/>

                <TextView
                    android:id="@+id/info_parking_distance_tv"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Distance \n .05 miles"
                    android:textColor="@android:color/white"/>


            </LinearLayout>



        </LinearLayout>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="5.2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingTop="@dimen/margin_25"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_25"
                android:layout_gravity="right"
                android:text="Expired:"/>




        </LinearLayout>

        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/margin_25"
            android:paddingRight="@dimen/margin_35"
            android:paddingTop="@dimen/margin_15"
            android:paddingBottom="@dimen/margin_15"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/info_parking_date_tv"
                android:layout_width="0dp"
                android:clickable="true"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/calendar_16"
                android:layout_weight="1"
                android:textColor="@android:color/darker_gray"
                android:gravity="center_vertical|left"
                android:padding="@dimen/margin_5"
                android:drawablePadding="@dimen/margin_15"
                android:background="@drawable/tv_bottom_gray_line"
                android:text="5/25/2016"/>

            <TextView
                android:id="@+id/info_parking_time_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/clock5_16"
                android:layout_weight="1"
                android:clickable="true"
                android:textColor="@android:color/darker_gray"
                android:padding="@dimen/margin_5"
                android:background="@drawable/tv_bottom_gray_line"
                android:drawablePadding="@dimen/margin_15"
                android:gravity="center_vertical|left"
                android:text="3:30pm"/>



        </LinearLayout>




        


        <TextView
            android:id="@+id/info_parking_reserve_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"

            android:paddingTop="@dimen/margin_15"
            android:paddingBottom="@dimen/margin_15"
            android:layout_marginLeft="@dimen/margin_15"
            android:layout_marginRight="@dimen/margin_15"
            android:layout_marginBottom="@dimen/margin_25"
            android:layout_marginTop="@dimen/margin_35"
            android:background="@drawable/reserve_btn_bg"
            android:textColor="@android:color/white"
            android:text="Extened"/>

    </LinearLayout>




</LinearLayout>